<p style="color: green"><%= notice %></p>

<h1>Empleados</h1>

<div id="employees">
  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Ciudad</th>
      <th scope="col">Cargo</th>
      <th scope="col">Estado</th>
      <th scope="col">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name_employee %></td>
        <td><%= employee.city.name_city %></td>
        <td><%= employee.function.name_function %></td>
        <td><%= employee.state.name_state %></td>
        <td>
          <%= link_to "Editar/Borrar", employee, class: "btn btn-info btn-sm" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Nuevo Empleado", new_employee_path, class: "btn btn-success" %>

